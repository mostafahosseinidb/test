

modal_default       = {

  class     : 'modal'
  enable    : true
  
  box_css   : {

  }

}

modal = extend(modal_default, modal)

if modal.enable

  body.has_{modal.class}
    overflow: hidden
  
  .{modal.class}
    height: 100%
    overflow: auto
    &_back
      position: fixed
      top: 0
      right: 0
      width: 100%
      height: 100%
      background-color: rgba(black, .6)
    &_box
      width: 200px
      background-color: #fff
      margin: 30px auto
    

  

