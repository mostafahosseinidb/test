.news_content
    .single_news
        margin-top: 60px;
        margin-bottom: 60px;
        header
            margin-bottom: 20px;
            h2
                font-size: 20px
                color: colors.basic
                font-weight: bold
            .time
                font-size: 11px
                color:#949494
                a
                    color:#949494
                    transition: all .3s
                    &:hover
                        color:colors.basic
        div
            img 
                width: 100%
        div
            p
                font-size: 14px;
                line-height: 2.5;
                margin-top: 15px;
    div>h2
        color:colors.basic
        font-size:16px
        font-weight: bold
        margin-top: 25px
    .ralated_news
        margin-top: 20px;
        height 100px
        figure
            height 100%
            margin: 0
            overflow hidden
            img 
                height 100%;
                width: auto
        figcaption 
            h2
                font-weight: bold    
                font-size: 12px;  
                color: colors.accent 
                transition: all .3s
            .time
                font-size: 11px
                color:#949494
        a:hover
            h2
                color: colors.basic