.main_header
    background-color: colors.accent
    padding-top: 15px
    .logo
        img
            height 60px;
    .languge
        padding-top: 20px
        select.input 
            height auto
            background-color: rgba(255,255,255,0.5)
            border: none
            padding: 5px
            font-size: 10px
    .header_nav
        margin-top: 20px;
        li
            float right
            margin-left: 30px
            a
                color: colors.white
                display inline-block
                padding: 7px 10px 7px 15px
                border-right: 5px solid #000
                transition: all .3s
                &:hover
                    border-color: #ef6822
                    background-color rgba(255,255,255,.4)
